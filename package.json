{
  "name": "devconnect",
  "version": "1.0.0",
  "description": "A small social media",
  "main": "app.js",
  "scripts": {
    "build": "node app.js",
    "server": "nodemon --config config/nodemon.config.json start app.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "nodemon -q test.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "start": "node app.js"
  },
  "author": "Saidul Amin",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.2.1",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "config": "^3.2.2",
    "dropbox": "^4.0.30",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "gravatar": "^1.8.0",
    "i": "^0.3.6",
    "isomorphic-fetch": "^2.2.1",
    "jimp": "^0.8.4",
    "jsonwebtoken": "^8.5.1",
    "mkdirp": "^0.5.1",
    "mongoose": "^5.7.1",
    "multer": "^1.4.2",
    "npm": "^6.13.4",
    "request": "^2.88.0",
    "rimraf": "^3.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.2"
  }
}
